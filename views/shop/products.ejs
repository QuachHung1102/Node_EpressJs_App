<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head.ejs')  %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
    <header class="main-header">
      <%- include('../includes/navigation.ejs') %>
    </header>
    <main>
      <div class="grid">
        <% if (prods.length > 0) { %> 
          <% prods.forEach(product => { %>
            <article class="card product-item">
              <header class="card__header">
                <h1 class="product__title"><%= product.productName %></h1>
              </header>
              <div class="card__image">
                <img src="/images/products/<%= product.imageUrl %>" alt="A pen" />
              </div>
              <div class="card__content">
                <h2 class="product__price"><%= product.price %></h2>
                <p class="product__description"><%= product.description %></p>
              </div>
              <div class="card__actions">
                <a href="/api/v1/shop/products/<%= product.id %>" class="btn">Details</a>
                <%- include('../includes/add-product-to-card.ejs', {product: product}) %>
              </div>
            </article>
          <% }) %> 
        <% } else { %>
          <h1>No products available</h1>
        <% } %>
      </div>
    </main>
  </body>
<%- include('../includes/end.ejs')  %>
