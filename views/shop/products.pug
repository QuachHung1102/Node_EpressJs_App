extends ../layouts/main-layout.pug

block styles 
  link(rel="stylesheet" href="/css/main.css")
  link(rel="stylesheet" href="/css/product.css")
block content 
  main 
    div.grid
      if prods.length > 0
        each product in prods 
          article.card.product-item 
            header.card__header
              h1.product__title #{product.productName}
            div.card__image
              img(src=`/images/products/${product.imageUrl}` alt=product.productName)
            div.card__content
              h2.product__price #{product.price}
              p.product__description #{product.description}
            div.card__actions 
              a(href=`/api/v1/shop/products/${product.id}`).btn Details  
              include ../includes/add-product-to-card.pug
      else 
        h1 No products available


