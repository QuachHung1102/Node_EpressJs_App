extends ../layouts/main-layout.pug

block styles 
  link(rel="stylesheet" href="/css/product.css")
block content 
  main 
    if cartProductsLength
      ul 
        each element in cartProducts
          li 
            p #{element.productData.productName} (#{element.quantity}) 
            form(action="/api/v1/shop/cart-delete-item" method="post")
              input(type="hidden" name="productId", value=element.productData.id)
              button(type="submit" class="btn") Delete 
    else
      h1 No Product in Cart!