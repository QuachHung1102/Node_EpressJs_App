<main>
  <form
    class="product-form"
    action="/api/v1/admin/update-product/{{product/id}}"
    method="post"
  >
    <div class="form-control">
      <label for="productName">Product Name</label>
      <input
        type="text"
        name="productName"
        id="productName"
        placeholder={{product.productName}}
      />
    </div>
    <div class="form-control">
      <label for="imageUrl ">Img</label>
      <input
        type="text"
        name="imageUrl"
        id="imageUrl"
        placeholder={{product.imageUrl}}
      />
    </div>
    <div class="form-control">
      <label for="price">Price</label>
      <input
        type="number"
        name="price"
        id="price"
        placeholder={{product.price}}
      />
    </div>
    <div class="form-control">
      <label for="description">Description</label>
      <textarea
        name="description"
        id="description"
        cols="30"
        rows="5"
        placeholder="{{product.description}}"
      ></textarea>
    </div>
    <button type="submit">{{#if updating}}Edit Product{{else}}Add Product{{/if}}</button>
  </form>
</main>