extends ../layouts/main-layout.pug

block styles 
  link(rel="stylesheet" href="/css/product.css")
  link(rel="stylesheet" href="/css/forms.css")
block content 
  main
    form(action=`/api/v1/admin/update-product/${product.id}` method="post").product-form
      .form-control
        label(for="productName") Product name
        input(type="text" name="productName" id="productName" placeholder=product.productName)
      .form-control
        label(for="imageUrl") Image
        input(type="text" name="imageUrl" id="imageUrl" placeholder=product.imageUrl) 
      .form-control
        label(for="price") Price
        input(type="number" name="price" id="price" placeholder=product.price step="0.01")
      .form-control 
        label(for="description") Description
        textarea(name="description" id="description" cols="30" rows="5" resize="none" placeholder=product.description) 
      button(type="submit") #{updating ? "Edit Product" : "Add Product"}
